<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="Animation" />
    <style name="Basewidth">
     <item name="android:layout_width">match_parent</item>
     <item name="android:layout_height">wrap_content</item>
  </style>
    <style name="Basewidth1">
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="Animation.ZoomLight" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/translucent_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/translucent_zoom_exit</item>
    </style>
   <style name="Theme.ZoomLight"  parent="Theme.AppCompat">
       
    </style>
    <style name="AppBackTheme" parent="@style/AppBaseTheme">
     <item name="homeAsUpIndicator">@drawable/actionbar_up_indicator</item>
    </style>
     <style name="AppNotitleTheme" parent="@style/AppBaseTheme">
       <item name="android:windowFullscreen">true</item>
       <item name="android:windowContentOverlay">@null</item>
    </style>
     <style name="AppBaseTheme" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/my_actionbar_style</item>
       <!--  <item name="popupMenuStyle">@style/MyPopupMenu</item> -->
                 <!-- item背景色 黄色-->  
         <!-- <item name="android:itemBackground">@color/menu_bg_color</item>   -->
        <!--  <item name="homeAsUpIndicator">@drawable/actionbar_up_indicator</item> -->
    </style>
     <style name="my_actionbar_style" parent="@style/Widget.AppCompat.ActionBar">
        <item name="icon">@drawable/app_logo1</item>
        <item name="background">@color/head_bg_color</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
     <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>
    <!-- Popup Menu Background Color styles -->
<!-- <style name="MyPopupMenu" 
       parent="@style/Widget.AppCompat.Light.PopupMenu">
    <item name="android:popupBackground">@color/white</item> 
</style> -->
    <style name="Theme.ZoomLight.Fullscreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item> 
    </style>
        <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
	<!-- <item name="android:indeterminateDrawable">@anim/loading</item> -->
		<item name="android:layout_width">21dip</item> 
		<item name="android:layout_height">21dip</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>
<style name="main_tab_bottom">
	<item name="android:textSize">@dimen/text_size_25</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/color_radiobutton</item>
    <item name="android:background">@drawable/radiobutton_selector</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:button">@null</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:paddingTop">@dimen/space_8</item>
    <item name="android:paddingBottom">@dimen/space_8</item>
</style>
<style name="head_tip_text">
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">fill_parent</item>
     <item name="android:textColor">@color/head_tip_text_color</item>
     <item name="android:textSize">@dimen/text_size_20</item>
     <item name="android:layout_centerHorizontal">true</item>
     <item name="android:gravity">center</item>
    </style>
    <style name="head_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:background">@color/head_tip_color</item>
    </style>
        <style name="list_view_today">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/list_item_divider</item>
        <item name="android:dividerHeight">@dimen/space_1</item>
    </style>
    <style name="list_item_today">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">#4D4D4D</item>
    </style>
       <style name="B4_Font_white">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/skin_dark_gray_item</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/space_40</item>
    </style>
    <style name="T4_Font">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/gray</item>
    </style>
        <style name="list_billtype_bottom_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/skin_billtype_bottom_btn</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <!-- <item name="android:background">@drawable/deny_bg_selector</item> -->
    </style>
        <style name="list_billtype_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_marginLeft">@dimen/space_5</item>
        <item name="android:layout_marginRight">@dimen/space_5</item>
    </style>
        <style name="list_billtype_tab">
    <item name="android:textSize">@dimen/text_size_25</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/color_radiobutton</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:button">@null</item>
    <item name="android:singleLine">true</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:padding">@dimen/space_3</item>
    </style>
    <style name="guide_dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15.0dip</item>
        <item name="android:src">@drawable/dot</item>
    </style>
    <style name="guide_img_skin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="add_bill_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/skin_billtype_btn</item>
        <item name="android:background">@drawable/blue_bg_selector</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:layout_marginBottom">@dimen/space_10</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>
    <style name="menu_top">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:orientation">horizontal</item>
         <item name="android:paddingTop">@dimen/space_5</item>
         <item name="android:paddingBottom">@dimen/space_5</item>
         <item name="android:paddingLeft">@dimen/space_8</item>
         <item name="android:paddingRight">@dimen/space_8</item>
         <item name="android:background">#F5F5F5</item>
    </style>
      <style name="baseline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:background">@color/list_item_divider</item>
    </style>
    <!--以下为2014-07-10后增加的（改版记账明细的样式） -->
    <style name="list_item_detail_lin" parent="@style/Basewidth1">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
