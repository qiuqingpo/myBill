<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#ea75b5"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_5"
    android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtbalance"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/text_size_24"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/space_5"
        />
      <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_24"
        android:textColor="@color/white"
        android:id="@+id/txtTotal"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_5"
        />
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="@dimen/space_1" android:background="@color/grey"></View> 
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/space_5"
    android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/text_size_20"
        android:text="@string/income"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/space_5"
        />
      <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_20"
        android:id="@+id/txtIncome"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_5"
        />
    </RelativeLayout>
     <View  android:layout_width="@dimen/space_1"  android:layout_height="match_parent" android:background="@color/grey"></View> 
 <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/space_5"
    android:orientation="horizontal">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/text_size_20"
        android:text="@string/consume"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/space_5"
        />
      <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_20"
        android:id="@+id/txtConsume"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_5"
        />
    </RelativeLayout>
  </LinearLayout>
 </LinearLayout>