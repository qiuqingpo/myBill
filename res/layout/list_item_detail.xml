<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:paddingTop="5dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingBottom="5dip"
     >
    <LinearLayout android:id="@id/view_info" android:layout_width="100.0dip" android:layout_height="wrap_content"  android:orientation="vertical" android:layout_alignParentLeft="true">
    <TextView style="@style/list_item_today" android:textSize="@dimen/text_size_20"  android:id="@id/view_type" />
    <TextView style="@style/list_item_today" android:id="@id/view_time" android:textColor="@color/listitem_date"  />
    </LinearLayout>
    <TextView style="@style/list_item_today" android:layout_width="120.0dip" android:textColor="@color/listitem_money" android:textSize="@dimen/text_size_22"  android:id="@id/view_amount" android:layout_marginLeft="@dimen/space_20" android:layout_toRightOf="@id/view_info" />
    <TextView style="@style/list_item_today" android:id="@id/view_desc"    android:layout_marginLeft="@dimen/space_0" android:layout_toRightOf="@id/view_amount"/>
    <ImageView style="@style/list_item_today" android:background="@drawable/notify_arrow"  android:layout_alignParentRight="true"/>
</RelativeLayout>
